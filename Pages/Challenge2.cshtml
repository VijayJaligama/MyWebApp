@page
@model MyWebApp.Pages.Challenge2Model
@{
    ViewData["Title"] = "Challenge 2";
}
<h1>Top 20 Articles on Hacker News</h1>
<table>
    <tbody>
        <tr class="athing">
            <td><b>Rank</b></td>
            <td>&nbsp;</td>
            <td><b>Article</b></td>
        </tr>
        @for (int i = 0; i < Model.Articles.Count; i++)
        {
            <tr>
                <td>@Html.Raw(Model.Articles[i])</td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Articles.Any())
{
    <p>No articles found.</p>
}

